

QListWidget{  
	border:none;
    background:#FFFFE0;  
	font-size:15px;   
    color:black;   
}  
QListWidget::item {  
    height:150;
	border-bottom:1px solid #E4E4E4;
	  
}  
QListWidget::item:hover {  
	background:#E4E4E4;
    padding:0px;  
    margin:0px;  
}  
QListWidget::item:selected {  
	background:#2CA7F8;
    padding:0px;  
    margin:0px;  
	outline:0px;

	font-size:15px;   
    color:white; 
}  
QListWidget:focus{outline: none;}

#QListWidget::item:selected:!active {  
    border-width: 0px ;  
}  
#QListWidget::item:selected:active {  
    border-width: 1px;  
}  

