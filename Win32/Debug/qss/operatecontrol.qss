QPushButton#pushButton {
	background-color: #A4D3EE;
	border-style: outset;
	border-width:1px;
	border-radius:5px;
	border-color: #dddddd;
	font: bold 20px;
	font-family:"仿宋";
	min-width:10em;
	padding:6px;
}
QPushButton#pushButton:pressed {
	background-color: #9AC0CD;
	border-style: inset;
}

